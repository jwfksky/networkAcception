<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:elevation="10dp"
    android:layout_height="wrap_content">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginRight="@dimen/margin_5"
        android:shrinkColumns="0,1,2,3"
        android:stretchColumns="0,1,2,3">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txtDefaultStyle"
                android:text="订单号"/>

            <TextView
                android:id="@+id/orderNum_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txtDefaultStyle"
                android:text="无"
                />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txtDefaultStyle"
                android:text="计划号"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txtDefaultStyle"
                android:text="提交时间"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txtDefaultStyle"
                android:text="计划状态"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txtDefaultStyle"
                android:text="金额"/>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/planId_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txtDefaultStyle"
                android:text="无"
                />

            <TextView
                android:id="@+id/submitTime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txtDefaultStyle"
                android:text="无"
                />

            <TextView
                android:id="@+id/planStatus_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txtDefaultStyle"
                android:text="无"
                />

            <TextView
                android:id="@+id/money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txtDefaultStyle"
                android:text="无"
                />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/txtDefaultStyle"
                android:text="计划开始时间"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/txtDefaultStyle"
                android:text="计划结束时间"/>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/planBeginTime_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/txtDefaultStyle"
                android:text="无"
                />

            <TextView
                android:id="@+id/planEndTime_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/txtDefaultStyle"
                android:text="无"
                />
        </TableRow>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_0.5"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:background="@color/menu_bg_press"/>
    </TableLayout>
    </LinearLayout>

